<Window x:Class="FoosNet.AllPlayersJoined"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:foosNet="clr-namespace:FoosNet"
        Title="Let's start playing!" Height="300" Width="300">
    <Window.DataContext>
        <foosNet:AllPlayersJoinedViewModel></foosNet:AllPlayersJoinedViewModel>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontSize="32">
            GO! GO! GO!!!
        </TextBlock>
        <Label Grid.Row="1">Players:</Label>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions></Grid.RowDefinitions>
            <ListView Name="FoosPlayersList" ItemsSource="{Binding FoosPlayers}" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="5,1,5,1" Text="{Binding DisplayName}"></TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Window>
