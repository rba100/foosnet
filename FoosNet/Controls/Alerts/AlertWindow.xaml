<Window x:Class="FoosNet.Controls.Alerts.AlertWindow"
        x:Name="AlertWindowElement"
        WindowStyle="None"
        BorderThickness="0"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" 
        Topmost="True" >
    
    <Window.Resources>
        
    </Window.Resources>
    
    <DockPanel>
        
        <StackPanel DockPanel.Dock="Bottom"
                    Margin="0, 0, 0, 100">
            
            <TextBlock x:Name="DescriptionText" 
                       Height="80"
                       HorizontalAlignment="Center"
                       FontSize="24"
                       Text="Description"/>
            
            <Button x:Name="AcceptButton"
                    Click="AcceptButton_OnClick"
                    Width="200"
                    Height="50"
                    Margin="0, 0, 0, 20">
                Accept
            </Button>
            <Button x:Name="DeclineButton"
                    Click="DeclineButton_OnClick"
                    Width="200"
                    Height="50"
                    Margin="0, 0, 0, 20">
                Decline
            </Button>
            <Button x:Name="CloseButton"
                    Click="CloseButton_OnClick"
                    Width="200"
                    Height="50"
                    Margin="0, 0, 0, 20"
                    Visibility="Hidden">
                Close
            </Button>
        </StackPanel>
        
        <TextBlock x:Name="AlertText"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="90">
            FOOS ALERT

            <TextBlock.Triggers>
                <EventTrigger RoutedEvent="TextBlock.Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever">

                            <DoubleAnimationUsingKeyFrames
                                Storyboard.TargetName="AlertText" 
                                Storyboard.TargetProperty="Opacity"
                                RepeatBehavior="Forever"
                                Duration="0:0:10">
                                <LinearDoubleKeyFrame Value="0.0" KeyTime="0:0:0" />
                                <LinearDoubleKeyFrame Value="1.0" KeyTime="0:0:1" />
                                <LinearDoubleKeyFrame Value="1.0" KeyTime="0:0:9" />
                                <LinearDoubleKeyFrame Value="0.0" KeyTime="0:0:10" />
                            </DoubleAnimationUsingKeyFrames>

                            <DoubleAnimation
                                Storyboard.TargetName="AlertText" 
                                Storyboard.TargetProperty="FontSize"
                                From="90" To="350" Duration="0:0:10" 
                                RepeatBehavior="Forever" />

                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </TextBlock.Triggers>
            
        </TextBlock>
    </DockPanel>
    </Window>

