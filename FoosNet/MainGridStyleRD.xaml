<!--
// Author:   Murray Foxcroft - April 2009
// Comments: A resource dictionary that contains the style for the main grid which constitutes the bulk of the window
-->
    <ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="MainGridBorder" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="White" />
        <Setter Property="BorderBrush" Value="Black" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="Background" >
            <Setter.Value>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFE4DCDC" Offset="0.001"/>
                    <GradientStop Color="#FF000000" Offset="0.014"/>
                    <GradientStop Color="#FFEBEBEB" Offset="0.06"/>
                    <GradientStop Color="#FFFFFFFF" Offset="0.06"/>
                    <GradientStop Color="#FFFFFFFF" Offset="0.9"/>
                    <GradientStop Color="#FFD6D0D0" Offset="0.945"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BitmapEffect">
            <Setter.Value>
                <OuterGlowBitmapEffect GlowSize="6" GlowColor="Gray" Opacity="1"/>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>