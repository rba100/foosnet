<!--
// Author:   Murray Foxcroft - April 2009
// Comments: A resource dictionary that contains the style for the main grid which constitutes the bulk of the window
-->
    <ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="MainGridBorder" TargetType="{x:Type Border}">
        <Setter Property="BorderBrush" Value="#FF3355AA" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="Background" >
            <Setter.Value>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF44AFFF" Offset="0.001"/>
                    <GradientStop Color="#FF44AAFF" Offset="0.05"/>
                    <GradientStop Color="#FF1155AA" Offset="0.0501"/>
                    <GradientStop Color="#FFF9F9F9" Offset="0.051"/>
                    <GradientStop Color="#FFF9F9F9" Offset="0.99"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>